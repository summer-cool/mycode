    background:#171d27;
    margin:53px 0 0 30px;
    float: left;
}
.ld_video{
    width:395px;
    height:214px;
    margin:20px 0 0 15px;
    float: left;
}
.ld_video video{
    width:100%;
    height:100%;
}
.ld_down{
    width:500px;
    height:210px;
    background:url(../imgs/ld_down_bg.png) no-repeat;
    background-size:100% 100%;
    float: left;
    margin:20px 0 0 15px;
}
.ld_erweima{
    width:155px;
    height:155px;
    float: left;
    margin:26px 0 0 65px;
}
.ios_btn{
    float: left;
    width:235px;
    height:70px;
    margin:26px 0 0 20px;
}
.and_btn{
    float: left;
    width:235px;
    height:70px;
    margin:15px 0 0 20px;
}
.ld_show{
    width:886px;
    height:488px;
    margin:24px 0 0 30px;
    float: left;
}
.ld_btn_C{
    width:100%;
    height:122px;
    background:url(../imgs/ld_btn_1.png) no-repeat;
    background-size:100% 100%;
}
.ld_d_C{
    width:866px;
    height:344px;
    margin:20px 0 0 9px;
    background:black;
}
.ld_li{
    width:60px;
    height:338px;
    float: left;
    cursor:pointer;
    margin-left:5px;
}
.ld_div{
    float: left;
    height:334px;
    display:none;
    width:0;
    position:relative;
    overflow: hidden;
}
.ld_div img{
    width:100%;
    height:100%;
    position: absolute;
    left:-540px;
    top:0;
}
.slider_div{
    width:540px;
    display:block;
}
.ld_img_slider{
    animation:addW 0.3s ease-in-out forwards;
    -webkit-animation:addW 0.3s ease-in-out forwards;
    -moz-animation:addW 0.3s ease-in-out forwards;
    -ms-animation:addW 0.3s ease-in-out forwards;
}
@keyframes addW{
    0%{
        left:-540px;
    }
    100%{
        left:0px;
    }
}
@-webkit-keyframes addW{
    0%{
        left:-540px;
    }
    100%{
        left:0px;
    }
}
@-moz-keyframes addW{
    0%{
        left:-540px;
    }
    100%{
        left:0px;
    }
}
@-ms-keyframes addW{
    0%{
        left:-540px;
    }
    100%{
        left:0px;
    }
}
